SED=@SED_PROGRAM@
GREP=@GREP_PROGRAM@
CUT=@CUT_PROGRAM@
ENV=@ENV_PROGRAM@
ECHO=@ECHO_PROGRAM@
CHMOD=@CHMOD_PROGRAM@

# store the compiler
COMPILER=$1
shift

# store flags
FLAGS="$@"

DEFAULT_CFLAGS="@DEFAULT_CFLAGS@"
DEFAULT_CXXFLAGS="@DEFAULT_CXXFLAGS@"

if [ "$@COMP@FLAGS" == "" ]; then
  # default @COMP@ flags
  @COMP@FLAGS="$DEFAULT_@COMP@FLAGS"
fi

if [ "$EXTRA_@COMP@FLAGS" != "" ]; then
  # extra @COMP@ flags
  @COMP@FLAGS="$@COMP@FLAGS $EXTRA_@COMP@FLAGS"
fi

GRIDS=
CONFIG_H=@CMAKE_BINARY_DIR@/config.h
if [ "$GRIDTYPE" != "" ]; then
  GRIDS=`$GREP "defined USED_[A-Z_]*_GRIDTYPE" $CONFIG_H | $SED 's/\(.*defined USED\_\)\(.*\)\(\_GRIDTYPE*\)/\2/g'`
fi

OLDFLAGS=$FLAGS
FLAGS=
for FLAG in $OLDFLAGS; do
  # filter flags that are in the INITIAL_FLAGS list
  if [ " $DEFAULT_@COMP@FLAGS " == *" $FLAG "* ]; then
    FLAG=""
  fi
  NEWFLAG=$FLAG
  VARNAME=`$ECHO $FLAG | $GREP "\-D" | $SED 's/-D//g'`
  for GRID in $GRIDS; do
    if [ "$VARNAME" == "$GRID" ]; then
      NEWFLAG="-D$GRIDTYPE"
      break
    fi
  done
  VARNAME=`$ECHO $VARNAME | $GREP "=" | $CUT -d "=" -f 1`
  if [ "$VARNAME" != "" ]; then
    VAR=`$ENV | $GREP $VARNAME`
    if [ "$VAR" != "" ]; then
      # add variable from environment to flags list
      NEWFLAG="-D$VARNAME=${!VARNAME}"
    fi
  fi
  FLAGS="$FLAGS $NEWFLAG"
done
if [ ! -z ${VERBOSE+x} ]; then
  $ECHO "$COMPILER $CXXFLAGS $FLAGS"
fi
exec $COMPILER $CXXFLAGS $FLAGS
